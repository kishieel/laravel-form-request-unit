{
    "name": "kishieel/laravel-form-request-unit",
    "description": "Laravel FormRequest Unit Test Helper",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "kishieel",
        "laravel",
        "form-request",
        "phpunit",
        "testing"
    ],
    "support": {
        "issues": "https://github.com/tomaszkisiel/laravel-permission/issues",
        "source": "https://github.com/tomaszkisiel/laravel-permission"
    },
    "authors": [
        {
            "name": "Tomasz Kisiel",
            "email": "tkisiel5w4@yahoo.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage",
        "lint": "vendor/bin/php-cs-fixer fix --verbose --ansi --config cs-fixer.php --dry-run",
        "fix": "vendor/bin/php-cs-fixer fix --verbose --ansi --config cs-fixer.php",
        "release": "conventional-changelog --commit",
        "release:patch": "conventional-changelog --patch --commit",
        "release:minor": "conventional-changelog --minor --commit",
        "release:major": "conventional-changelog --major --commit",
        "release:first": "conventional-changelog --first-release --commit"
    },
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/contracts": "^7.0|^8.0",
        "illuminate/support": "^7.0|^8.0",
        "illuminate/validation": "^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.9|^3.3",
        "marcocesarato/php-conventional-changelog": "^1.12",
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "pestphp/pest": "^1.21",
        "phpunit/phpunit": "^8.0|^9.3"
    },
    "autoload": {
        "psr-4": {
            "Kishieel\\RequestUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kishieel\\RequestUnit\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}